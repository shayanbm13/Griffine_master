<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout32"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.security">


    <TextView

        android:id="@+id/choosed_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25mdp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Choose \n your security mode"
        android:textColor="@color/white"
        android:textSize="@dimen/_10font_mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button

        android:id="@+id/btn_arme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon_arme"
        android:fontFamily="@font/prompt_regular"
        android:paddingTop="5dp"


        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_disarme"
        app:layout_constraintEnd_toStartOf="@+id/btn_disarme"
        app:layout_constraintHeight_percent="0.23"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_disarme"

        app:layout_constraintWidth_percent="0.29"
        tools:ignore="RtlCompat" />

    <Button

        android:id="@+id/btn_disarme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon_disarme"
        android:gravity="top"

        android:paddingTop="5dp"

        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/elevator"


        app:layout_constraintEnd_toStartOf="@+id/btn_sleep"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toEndOf="@+id/btn_arme"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705"
        app:layout_constraintWidth_percent="0.29"
        tools:ignore="RtlCompat" />

    <Button

        android:id="@+id/btn_sleep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon_sleep"
        android:gravity="top"
        android:paddingTop="5dp"
        android:textAlignment="center"


        app:layout_constraintBottom_toBottomOf="@+id/btn_disarme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toEndOf="@+id/btn_disarme"
        app:layout_constraintTop_toTopOf="@+id/btn_disarme"
        app:layout_constraintWidth_percent="0.29"

        tools:ignore="RtlCompat" />


    <Button
        android:id="@+id/elevator"
        android:layout_width="@dimen/_160mdp"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/back_btn_color"
        android:text="Elevator"
        android:textColor="@color/white"
        android:textSize="@dimen/_7font_mdp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_arme"
        app:layout_constraintVertical_bias="0.513"
        app:layout_constraintWidth_percent="0.35" />


</androidx.constraintlayout.widget.ConstraintLayout>