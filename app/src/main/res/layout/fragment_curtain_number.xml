<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout29"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/popupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Your Curtain"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="25dp"
        tools:layout_conversion_absoluteWidth="135dp" />

    <LinearLayout
        android:id="@+id/linearLayout31"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_40mdp"

        android:layout_marginTop="24dp"
        android:background="@drawable/curtain_deselect"
        android:gravity="center"

        android:paddingTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/popupText"

        app:layout_constraintStart_toStartOf="@+id/popupText"
        app:layout_constraintTop_toBottomOf="@+id/popupText"

        tools:layout_conversion_absoluteHeight="123dp"
        tools:layout_conversion_absoluteWidth="123dp">

        <TextView
            android:id="@+id/curtain_number"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/_11font_mdp" />


    </LinearLayout>


    <Button
        android:id="@+id/less_curtain"
        android:layout_width="@dimen/_20mdp"
        android:layout_height="@dimen/_20mdp"
        android:layout_marginTop="16dp"
        android:background="@drawable/jahat"
        android:gravity="left"
        android:rotation="90"
        app:layout_constraintEnd_toStartOf="@+id/more_curtain"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout31"
        app:layout_constraintWidth_percent="0.15"
        tools:layout_conversion_absoluteHeight="90dp"
        tools:layout_conversion_absoluteWidth="90dp" />

    <Button
        android:id="@+id/more_curtain"
        android:layout_width="@dimen/_20mdp"
        android:layout_height="@dimen/_20mdp"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.15"
        android:layout_marginStart="32dp"
        android:background="@drawable/jahat"

        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="@+id/less_curtain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/less_curtain"
        app:layout_constraintTop_toTopOf="@+id/less_curtain"
        tools:layout_conversion_absoluteHeight="90dp"
        tools:layout_conversion_absoluteWidth="90dp" />


    <Button
        android:id="@+id/closeButton_curtain"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_15mdp"

        android:layout_marginTop="24dp"
        android:background="@drawable/back_btn_color"
        android:text="OK"
        android:textSize="@dimen/_10font_mdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/more_curtain"
        app:layout_constraintStart_toStartOf="@+id/less_curtain"
        app:layout_constraintTop_toBottomOf="@+id/less_curtain"
        tools:layout_conversion_absoluteHeight="50dp"
        tools:layout_conversion_absoluteWidth="150dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
