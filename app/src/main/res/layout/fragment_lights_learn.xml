<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout38"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.griffin_home_frags.lights_learn">


    <TextView

        android:id="@+id/choosed_tidddtle"
        android:layout_width="0dp"

        android:layout_height="@dimen/_25mdp"

        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="11dp"


        android:text="Choose \nyour Light"
        android:textColor="@color/white"
        android:textSize="@dimen/_10mdp"
        app:layout_constraintEnd_toStartOf="@+id/addlightitem_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addlightitem_menu"
        android:layout_width="@dimen/_22mdp"
        android:layout_height="@dimen/_18mdp"
        android:layout_marginEnd="25dp"



        android:background="@drawable/threepoint_pupapmenu"

        app:layout_constraintBottom_toBottomOf="@+id/choosed_tidddtle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintStart_toEndOf="@+id/choosed_tidddtle"
        app:layout_constraintTop_toTopOf="@+id/choosed_tidddtle"
        app:layout_constraintWidth_percent="0.1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/light_learn_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.84"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginLeft="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:layout_marginRight="@dimen/_10mdp"
        android:layout_marginBottom="@dimen/_10mdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addlightitem_menu"
        app:spanCount="3"
        tools:listitem="@layout/styles_image" />


</androidx.constraintlayout.widget.ConstraintLayout>