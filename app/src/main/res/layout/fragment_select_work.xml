<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    tools:context=".fragment.setting_four.select_work_local">

    <Button
        android:id="@+id/scenario_choosed_work"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"


        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/scenario_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/light_choosed_work"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="8dp"
        android:background="@drawable/light_off"
        app:layout_constraintEnd_toEndOf="@+id/scenario_choosed_work"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="@+id/scenario_choosed_work"
        app:layout_constraintTop_toBottomOf="@+id/scenario_choosed_work" />

    <Button
        android:id="@+id/plug_choosed_work"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginTop="8dp"
        android:background="@drawable/plug_off"
        app:layout_constraintEnd_toEndOf="@+id/light_choosed_work"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="@+id/light_choosed_work"
        app:layout_constraintTop_toBottomOf="@+id/light_choosed_work" />

    <Button
        android:id="@+id/curtain_choosed_work"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/curtain_off"
        app:layout_constraintEnd_toEndOf="@+id/plug_choosed_work"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="@+id/plug_choosed_work"
        app:layout_constraintTop_toBottomOf="@+id/plug_choosed_work" />

    <Button
        android:id="@+id/cancel_choosed_work"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.35"

        android:layout_marginTop="16dp"
        android:background="@drawable/cancel"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/curtain_choosed_work"
        app:layout_constraintStart_toStartOf="@+id/curtain_choosed_work"
        app:layout_constraintTop_toBottomOf="@+id/curtain_choosed_work" />

</androidx.constraintlayout.widget.ConstraintLayout>