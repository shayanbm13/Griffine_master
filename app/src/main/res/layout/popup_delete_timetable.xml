<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_200mdp"
    android:layout_height="@dimen/_80mdp"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="@drawable/popupback">
    <TextView
        android:id="@+id/text_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Are you sure you want to delete this time table?"
        android:textSize="@dimen/_13font_mdp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right"
        >
        <Button
            android:id="@+id/yes_delete"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_18mdp"
            android:background="@drawable/back_btn_color"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_7font_mdp"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/cancel_delete"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_18mdp"
            android:background="@drawable/back_btn_color"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_7font_mdp"
            android:layout_margin="10dp"
            />

    </LinearLayout>





</LinearLayout>
