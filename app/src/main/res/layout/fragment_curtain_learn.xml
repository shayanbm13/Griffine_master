<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:gravity="center">

            <TextView

                android:id="@+id/choosed_tidddtle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25mdp"
                android:layout_marginTop="8dp"

                android:layout_marginBottom="2dp"
                android:layout_weight="5"
                android:text="Choose \nyour Curtain"
                android:textColor="@color/white"
                android:textSize="@dimen/_10font_mdp"


                />

            <ImageButton
                android:id="@+id/addcurtainitem_menu"
                android:layout_width="@dimen/_17mdp"
                android:layout_height="@dimen/_16mdp"






                android:layout_marginTop="8dp"





                android:background="@drawable/threepoint_pupapmenu"

                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/curtain_learn_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/styles_image"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1" />





    </LinearLayout>


</FrameLayout>