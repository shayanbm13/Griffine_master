<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout19"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.setting_two.setting_homestyle">


    <TextView

        android:id="@+id/choosed_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="7dp"
        android:text="Home Style"
        android:textColor="@color/white"
        android:textSize="@dimen/_10font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/homestyle_addrome_menu"
        app:layout_constraintEnd_toStartOf="@+id/homestyle_addrome_menu"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/homestyle_addrome_menu"
        android:layout_width="@dimen/_22mdp"
        android:layout_height="@dimen/_18mdp"
        app:layout_constraintWidth_percent="0.1"

        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/threepoint_pupapmenu"
        app:layout_constraintBottom_toTopOf="@+id/style_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/choosed_title"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/style_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"

        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homestyle_addrome_menu"
        tools:listitem="@layout/styles_image" />


</androidx.constraintlayout.widget.ConstraintLayout>