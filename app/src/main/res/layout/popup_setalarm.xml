<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300mdp"
    android:layout_height="@dimen/_300mdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/popupback">


    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/day_sa"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_margin="5dp"
            android:background="@drawable/back_btn_2"
            android:button="@color/lb_error_background_color_translucent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Sa" />

        <CheckBox
            android:id="@+id/day_su"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_margin="5dp"
            android:background="@drawable/back_btn_2"
            android:button="@color/lb_error_background_color_translucent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Su" />

        <CheckBox
            android:id="@+id/day_mo"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_margin="5dp"
            android:background="@drawable/back_btn_2"
            android:button="@color/lb_error_background_color_translucent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Mo" />

        <CheckBox
            android:id="@+id/day_tu"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:background="@drawable/back_btn_2"
            android:button="@color/lb_error_background_color_translucent"
            android:gravity="center"
            android:text="Tu" />

        <CheckBox
            android:id="@+id/day_we"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_margin="5dp"
            android:background="@drawable/back_btn_2"
            android:button="@color/lb_error_background_color_translucent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="We" />

        <CheckBox
            android:id="@+id/day_th"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/back_btn_2"
            android:button="@color/lb_error_background_color_translucent"
            android:gravity="center"
            android:text="Th" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/day_fr"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/back_btn_2"
        android:button="@color/lb_error_background_color_translucent"
        android:gravity="center"
        android:text="Fr" />

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


        </LinearLayout>

        <TextView
            android:id="@+id/textview_turn_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_6font_mdp"
            android:layout_marginLeft="10dp"

            android:text="Turn ON :"/>

        <NumberPicker
            android:id="@+id/hourPicker_on"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:gravity="bottom"

            android:layout_marginLeft="-60dp"
            android:layout_gravity="bottom"

             />

        <NumberPicker
            android:id="@+id/minutePicker_on"
            android:layout_width="50dp"
            android:layout_height="100dp"

            android:gravity="bottom"
            android:layout_gravity="bottom"
            />



        <TextView
            android:id="@+id/textview_turn_of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"
            android:textSize="@dimen/_6font_mdp"
            android:text="Turn OFF :"/>

        <NumberPicker
            android:id="@+id/hourPicker_off"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:gravity="bottom"

            android:layout_marginLeft="-65dp"
            android:layout_gravity="bottom"

            />

        <NumberPicker
            android:id="@+id/minutePicker_off"
            android:layout_width="50dp"
            android:layout_height="100dp"

            android:gravity="bottom"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

    <Button
        android:id="@+id/setalarm"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_15mdp"
        android:gravity="center"
        android:background="@drawable/back_btn_color"
        android:text="SET"
        android:textColor="@color/white"
        android:textSize="@dimen/_7font_mdp"
        >


    </Button>


</LinearLayout>
